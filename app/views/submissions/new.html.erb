<section class="container mx-auto">
  <h2>challenge</h2>
  <h1 class="text-3xl">Hello World</h1>
  <%= debug @submission %>
  <%= debug @result %>
  <%= form_with model: @submission, url: execute_submissions_path do |form| %>
    <div class="space-y-4">
      <div>
        <%= form.label :code %>
        <%= form.text_area :code, rows: 10, cols: 50, class: "textarea w-full" %>
      </div>
      <div>
        <%= form.submit "Submit", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  <% if @result.present? %>
    <div class="mt-4 p-4 bg-gray-100 rounded">
      <h3 class="font-bold">Execution Result:</h3>
      <pre class="mt-2 p-2 bg-gray-800 text-white rounded overflow-auto"><%= @result %></pre>
    </div>
  <% end %>
</section>